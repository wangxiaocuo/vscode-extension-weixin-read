{
	"name": "WeixinRead",
	"displayName": "Weixin Read",
	"description": "在Vscode打开微信读书网页版",
	"version": "0.0.1",
	"publisher": "wangxiaocuo",
	"repository": {
		"type": "git",
		"url": "https://github.com/wangxiaocuo/vscode-extension-weixin-read.git"
	},
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"WeixinRead",
		"微信读书",
		"微信",
		"读书",
		"weixin",
		"read",
		"wx"
	],
	"activationEvents": [
		"onCommand:WeixinRead.start"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "WeixinRead.start",
				"title": "微信读书",
				"category": "Weixin Read",
				"icon": {
					"light": "./assets/icon-light.svg",
					"dark": "./assets/icon-dark.svg"
				}
			}
		],
		"configuration": {
			"title": "TypeScript",
			"properties": {
				"WeixinRead.panelName": {
					"type": "string",
					"default": "微信读书",
					"description": "设置打开的标签页的名称"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"icon": "./assets/logo.png",
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"ts-loader": "^9.2.6",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1",
		"@vscode/test-electron": "^2.0.3"
	}
}
